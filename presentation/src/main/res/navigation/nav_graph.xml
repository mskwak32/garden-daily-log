<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragmentDest">

    <fragment
        android:id="@+id/homeFragmentDest"
        android:name="com.mskwak.presentation.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/home_to_diary"
            app:destination="@id/diaryFragmentDest" />

    </fragment>

    <fragment
        android:id="@+id/diaryFragmentDest"
        android:name="com.mskwak.presentation.ui.diary_page.DiaryFragment"
        tools:layout="@layout/fragment_diary">

        <argument
            android:name="plantId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <fragment
        android:id="@+id/settingFragmentDest"
        android:name="com.mskwak.presentation.ui.setting.SettingFragment"
        tools:layout="@layout/fragment_setting" />

    <action
        android:id="@+id/action_global_diaryFragmentDest"
        app:destination="@id/diaryFragmentDest"
        app:launchSingleTop="true" />

    <action
        android:id="@+id/action_global_homeFragmentDest"
        app:destination="@id/homeFragmentDest"
        app:popUpTo="@id/nav_graph" />

    <action
        android:id="@+id/action_global_settingFragmentDest"
        app:destination="@id/settingFragmentDest"
        app:popUpTo="@id/nav_graph" />


</navigation>