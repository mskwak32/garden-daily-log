<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.GardenDailyLog" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_600</item>
        <item name="colorPrimaryVariant">@color/green_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/green_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/bottomSheetDialog</item>
    </style>

    <style name="roundedCorner">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="numberPicker">
        <item name="colorControlNormal">@color/green_600</item>
    </style>

    <style name="spinnerDropdown">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:dropDownVerticalOffset">36dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:popupBackground">@drawable/spinner_dropdown_popup_bg</item>
    </style>

    <style name="bottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="bottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/bottomSheetShapeAppearance</item>
        <item name="behavior_skipCollapsed">true</item>
    </style>

    <style name="bottomSheetShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>

    <style name="WrapContentDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="windowMinWidthMajor">0%</item>
        <item name="windowMinWidthMinor">0%</item>
    </style>

    <style name="fullScreenDialog" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/green_600</item>
    </style>

    <style name="dialogAnimation">
        <item name="android:windowEnterAnimation">@anim/from_bottom</item>
        <item name="android:windowExitAnimation">@anim/to_bottom</item>
    </style>

    <style name="plantDetailAppbarBottomDeco">
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>

    <style name="popupMenuStyle">
        <item name="android:popupBackground">@drawable/rectangle_stroke_box_bg</item>
    </style>

</resources>