<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.GardenDailyLog" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_600</item>
        <item name="colorPrimaryVariant">@color/green_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/green_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="roundedCorner">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="numberPicker">
        <item name="colorControlNormal">@color/green_600</item>
    </style>

    <style name="spinnerDropdown">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:dropDownVerticalOffset">36dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:popupBackground">@drawable/spinner_dropdown_popup_bg</item>
    </style>
</resources>